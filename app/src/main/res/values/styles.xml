<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="auth_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_marginTop">@dimen/register_inputs_marginTop</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="flow_horizontalGap">@dimen/auth_button_flow_horizontalGap</item>
        <item name="flow_verticalGap">@dimen/auth_button_flow_verticalGap</item>
        <item name="strokeColor">@color/darkGreen</item>
    </style>


    <style name="inputs_corner_Radius">
        <item name="boxCornerRadiusBottomStart">@dimen/register_inputs_cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/register_inputs_cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/register_inputs_cornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/register_inputs_cornerRadius</item>
    </style>


    <style name="SpinnerItemTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="SpinnerItemTextStyleSelected" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="introBtn_corner_Radius">
        <item name="boxCornerRadiusBottomStart">@dimen/intro_btn_cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/intro_btn_cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/intro_btn_cornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/intro_btn_cornerRadius</item>
        <item name="flow_horizontalGap">@dimen/auth_button_flow_horizontalGap</item>
        <item name="flow_verticalGap">@dimen/auth_button_flow_verticalGap</item>
    </style>

    <style name="items_icons_text_style">
        <item name="android:textSize">@dimen/tv_SearchlocationIconText_text_size</item>
        <item name="android:layout_marginEnd">@dimen/tv_SearchlocationIconText_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/tv_SearchlocationIconText_margin_bottom</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="items_icons_img_style">
        <item name="android:layout_width">@dimen/iv_locationIcon_width_height</item>
        <item name="android:layout_height">@dimen/iv_locationIcon_width_height</item>
        <item name="android:layout_marginStart">@dimen/iv_locationIcon_margin_start</item>
        <item name="android:layout_marginTop">@dimen/iv_locationIcon_margin_top</item>
    </style>

    <!-- Define a custom style for the AlertDialog -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Background color -->
        <item name="android:background">#FFFFFF</item>
        <!-- Title text appearance -->
        <item name="android:textColorPrimary">#FF5722</item>
        <!-- Message text appearance -->
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:textSize">16sp</item>
        <!-- Button text appearance -->
        <item name="android:buttonStyle">@style/CustomDialogButton</item>
    </style>

    <!-- Custom style for dialog buttons -->
    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF5722</item>
    </style>

</resources>
