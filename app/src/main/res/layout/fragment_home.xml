<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".presentation.fragment.HomeFragment">

    <ImageView
        android:id="@+id/iv_userHomeImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/default_home_image"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_homeSettingImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/default_home_image"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/tv_saluteUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/welcome"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/tv_userNameText"
        app:layout_constraintStart_toEndOf="@+id/iv_userHomeImage"
        app:layout_constraintTop_toTopOf="@+id/iv_userHomeImage" />

    <TextView
        android:id="@+id/tv_userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/user_name"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_userHomeImage"
        app:layout_constraintStart_toEndOf="@+id/iv_userHomeImage"
        app:layout_constraintTop_toBottomOf="@+id/tv_saluteUserText" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_homeSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/search_color"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_userNameText"
        app:queryHint="Type ingredients..." />

    <Spinner
        android:id="@+id/letterSpinnerFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:entries="@array/letters_array"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/rv_homeRecycleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_homeSearch"
        tools:ignore="TouchTargetSizeCheck" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_homeRecycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/letterSpinnerFilter"
        tools:listitem="@layout/home_recipes_item" />


</androidx.constraintlayout.widget.ConstraintLayout>
